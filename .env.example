# --- App ---
APP_ENV=local
TZ=Europe/Warsaw

# --- OpenAI (Assistants for prompt text only) ---
OPENAI_API_KEY=sk-... # put real value in local .env only

# --- Google Generative AI (Gemini 2.5 Flash Image Preview) ---
GOOGLE_API_KEY=...    # put real value in local .env only

# --- Telegram (Telethon user session) ---
TELEGRAM_API_ID=000000
TELEGRAM_API_HASH=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TELEGRAM_PHONE=+00000000000
TELEGRAM_TARGET_CHAT_ID=0

# --- Generation controls ---
DAILY_JOBS=17
RUN_WINDOW_START=10:00
RUN_WINDOW_END=11:00
IMAGES_PER_JOB=2
IMAGE_ASPECT=VERTICAL
IMAGE_FORMAT=png
RETRY_BACKOFF_MINUTES=5
MAX_PROMPT_REGENS=1
MAX_TOTAL_FAILURE_CYCLES=2
